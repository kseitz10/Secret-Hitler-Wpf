{
  "UseInMemoryDatabase": true,
  "ConnectionStrings": {
    "DefaultConnection": "Server=(localdb)\\mssqllocaldb;Database=SecretHitlerDb;Trusted_Connection=True;MultipleActiveResultSets=true;"
  },

  "Serilog": {
    "Using": [ "Serilog.Sinks.Console" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "SecretHitler": "Debug"
      }
    },
    "WriteTo": [
      { "Name": "Console" }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ]
  },

  "IdentityServer": {
    "Clients": {
      "SecretHitler.WebUI": {
        "Profile": "IdentityServerSPA"
      }
    }
  },

  "AllowedHosts": "*"
}
