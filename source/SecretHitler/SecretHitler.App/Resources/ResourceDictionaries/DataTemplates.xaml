<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:viewmodels="clr-namespace:SecretHitler.App.ViewModels"
                    xmlns:views="clr-namespace:SecretHitler.App.Views">

    <DataTemplate DataType="{x:Type viewmodels:GameSurfaceViewModel}">
        <views:GameSurfaceView />
    </DataTemplate>

    <DataTemplate DataType="{x:Type viewmodels:HomeViewModel}">
        <views:HomeView />
    </DataTemplate>

    <DataTemplate DataType="{x:Type viewmodels:PlayerSelectionViewModel}">
        <StackPanel>
            <TextBlock Text="{Binding Prompt}" Margin="0,0,0,10" />
            <ListBox Margin="0,0,0,10"
                     DisplayMemberPath="Name"
                     ItemsSource="{Binding Players}"
                     SelectedItem="{Binding SelectedPlayer}" />
            <Button Content="Choose" Command="{Binding AcceptCommand}" />
        </StackPanel>
    </DataTemplate>

</ResourceDictionary>